{
    "name": "think.studio/ipro-software-api-php",
    "description": "iProSoftware api client (php)",
    "keywords": [
        "iprosoftware",
        "ipro-software",
        "IproSoftware",
        "api",
        "php"
    ],
    "homepage": "https://github.com/dev-think-one/ipro-software-api-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Yaroslav Georgitsa",
            "email": "yaroslav.georgitsa@gmail.com",
            "homepage": "https://yaroslawww.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "nesbot/carbon": "^2.0|^3.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.49",
        "mikey179/vfsstream": "^2.0@dev",
        "vimeo/psalm": "^5.21",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "classmap": [
        ],
        "psr-4": {
            "IproSoftwareApi\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "src/",
            "tests/"
        ],
        "psr-4": {
            "IproSoftwareApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix",
        "psalm": "vendor/bin/psalm"
    }
}
